    <form id="supplierForm" action="/createCustomerMaster" method="post">
      {{!-- <h1>Order Billing</h1> --}}
      <div id="formdata">
        <h4>Customer Master Details</h4>
        <label for="Code" class="label-block">Code:</label>
        <div class="sup-containe" style="position: relative;">
          <input type="text" id="Code" name="Code" class="sup-int" placeholder="Enter Customer Code">
          <div class="sup-icon" style="position:absolute; left:10px;top:15%">
            <i style='font-size:12px' class='fas'>&#xf121;</i>
          </div>
        </div>



        <label for="Name" class="label-block"> Name <span class="text-danger">*</span></label>
        <input type="text" oninput="AlphabateValidate(this)" id="Name" name="Name" placeholder="&#128100; Enter Name"
          required pattern="[A-Za-z ]+" title="Please enter only letters">

        <label for="ContactPersonName" class="label-block">Contact Person Name:</label>
        <input type="text" oninput="AlphabateValidate(this)" id="ContactPersonName" name="ContactPersonName"
          placeholder="&#128100; Enter Contact Person" title="Please enter only letters">




        <label for="ContactNo1">Contact No. 1 <span class="text-danger">*</span> :</label>
        <input type="number" oninput="MobileValidate(this)" id="ContactNo1" name="ContactNo1"
          placeholder="&#x260E; Enter Contact Number 1" required maxlength="10"
          title="Please enter a 10-digit phone number">

        <label for="ContactNo2">Contact No. 2:</label>
        <input type="number" id="ContactNo2" oninput="MobileValidate(this)" name="ContactNo2"
          placeholder="&#x260E; Enter Contact Number 2" maxlength="10" title="Please enter a 10-digit phone number">


        <label for="AadharNo">Aadhar No:</label>
        <input type="number" id="AadharNo" name="AadharNo" maxlength="12"  placeholder="&#9751;  Enter Aadhar Number"
          title="Please enter a 12-digit Aadhar Number">



        <label for="Pincode">Pincode:</label>
        <input type="number" id="Pincode" name="Pincode" placeholder="&#9951;  Enter Pincode" maxlength="6"
          title="Please enter a 6-digit Pin Code Number"
          oninput="javascript:if(this.value.length > this.maxLength) this.value = this.value.slice(0,this.maxLength)">




        <label for="Email">Email <span class="text-danger">*</span> :</label>
        <input type="email" id="Email" oninput="EmailValidate(this)" name="Email" placeholder="&#x2709;  Enter Email"
          required>

        <label for="GSTNo">GST No:</label>
        <input type="text" id="GSTNo" name="GSTNo" placeholder="&#9951; Enter GST No." oninput="gstNoValidate(this)"
          minlength="15" maxlength="15" title="Please enter a 15-digit GST Number">



        <label for="PAN">PAN:</label>
        <input type="text" id="PAN" name="PAN" placeholder="&#9751; Enter PAN" oninput="panNoValidate(this)"
          minlength="10" maxlength="10" title="Please enter a 10-digit PAN Number">


        <label for="Status" class="label-block">Status:</label>
        <select id="Status" name="Status">
          <option value="Active" selected>Active</option>
          <option value="Inactive">Inactive</option>
        </select>

        <label for="Address">Address:</label>
        <div>
          <textarea id="Address" name="Address" rows="4" placeholder="Enter Address" cols="72"
            style="width: 100%;"></textarea><br><br>
        </div>
      </div>

  </div>
  </div>

  <button type="submit"
    style="border-radius: 10px; margin-top:30px; margin-bottom:30px; background-color:#4723d9;">Submit</button>

